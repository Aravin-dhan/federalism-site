---
export interface Props {
	quote: string;
	signature?: string;
	lang?: 'en' | 'ta';
}

const { quote, signature = 'Federalism Under Siege', lang = 'en' } = Astro.props;
---

<figure class="flex aspect-square flex-col border border-slate/20 bg-paper text-slate" lang={lang}>
	<blockquote class="flex-1 p-8 font-display text-2xl leading-tight text-slate">
		{quote}
	</blockquote>
	<figcaption class="flex items-center justify-between border-t border-slate/10 px-8 pb-6 pt-4 text-sm uppercase tracking-widest">
		<span class="text-slate/60">Share</span>
		<span>{signature}</span>
	</figcaption>
</figure>
