---
export interface Props {
	text: string;
	author: string;
	brand?: string;
}

const { text, author, brand = 'Federalism Under Siege' } = Astro.props;
---

<section class="flex aspect-square flex-col border border-slate/20 bg-paper text-slate" role="note" aria-label="Shareable quote">
	<blockquote class="flex-1 p-10 font-display text-3xl leading-snug">
		{text}
	</blockquote>
	<footer class="flex items-center justify-between border-t border-slate/10 px-10 py-6 text-sm uppercase tracking-[0.3em]">
		<span class="font-display text-xl italic text-slate">{author}</span>
		<span class="text-slate/70">{brand}</span>
	</footer>
</section>
