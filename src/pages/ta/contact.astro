---
import Layout from '../../layouts/Layout.astro';

const contactPoints = [
	{
		label: 'மின்னஞ்சல்',
		value: 'balamurugan@federalism.in',
		href: 'mailto:balamurugan@federalism.in'
	},
	{
		label: 'Signal / Whatsapp',
		value: '+91 90000 00000',
		href: 'tel:+919000000000'
	},
	{
		label: 'அலுவலகம்',
		value: 'அறிவாலயம், அறை 214, சென்னை 600018',
		href: 'https://maps.app.goo.gl/'
	}
];
---

<Layout lang="ta" title="பாலமுருகன் K | தொடர்பு">
	<section class="space-y-4" lang="ta">
		<p class="text-sm uppercase tracking-[0.3em] text-slate/70">என்னை அணுக</p>
		<h1 class="font-display text-4xl text-slate">தொடர்பு</h1>
		<p class="text-base text-slate/80">இந்த வலைப்பதிவு புனிதம் அல்ல, செயல்பாட்டுக்கான வழிகாட்டி. கீழுள்ள வழிகள் மூலம் குழுவை அணுகலாம்.</p>
	</section>

	<section class="mt-10 grid gap-6 md:grid-cols-3" aria-label="தொடர்பு வழிகள்">
		{contactPoints.map((point) => (
			<article class="border border-slate/20 bg-white p-6">
				<p class="text-sm uppercase tracking-[0.3em] text-slate/60">{point.label}</p>
				<a class="mt-2 block font-display text-2xl text-slate hover:text-accent-red" href={point.href}>
					{point.value}
				</a>
			</article>
		))}
	</section>
</Layout>
