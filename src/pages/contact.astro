---
import Layout from '../layouts/Layout.astro';

const contactPoints = [
	{
		label: 'Email',
		value: 'balamurugan@federalism.in',
		href: 'mailto:balamurugan@federalism.in'
	},
	{
		label: 'Signal / WhatsApp',
		value: '+91 90000 00000',
		href: 'tel:+919000000000'
	},
	{
		label: 'Office',
		value: 'Room 214, Kalaignar Arivalayam, Chennai 600018',
		href: 'https://maps.app.goo.gl/'
	}
];

const speaking = [
	{
		title: 'Interviews & Media',
		description: 'Write to media@federalism.in with format, audience size, and preferred dates.'
	},
	{
		title: 'Movement Work',
		description: 'Grassroots organizations can request briefings via signal using the number above.'
	},
	{
		title: 'Research Citations',
		description: 'Pull quotes and charts from the site are CC-BY; please attribute “Balamurugan K, Federalism Under Siege”.'
	}
];
---

<Layout title="Balamurugan K | Contact" description="How to reach Balamurugan and the Federalism Under Siege team.">
	<section class="space-y-4">
		<p class="text-sm uppercase tracking-[0.3em] text-slate/70">Always reachable</p>
		<h1 class="font-display text-4xl text-slate">Contact</h1>
		<p class="text-base text-slate/80">
			This notebook is public because every reader might become a collaborator. Use the coordinates below to reach me or the small team that helps with scheduling.
		</p>
	</section>

	<section class="mt-10 grid gap-6 md:grid-cols-3" aria-label="Contact methods">
		{contactPoints.map((point) => (
			<article class="border border-slate/20 bg-white p-6">
				<p class="text-sm uppercase tracking-[0.3em] text-slate/60">{point.label}</p>
				<a class="mt-2 block font-display text-2xl text-slate hover:text-accent-red" href={point.href}>
					{point.value}
				</a>
			</article>
		))}
	</section>

	<section class="mt-16 grid gap-6 md:grid-cols-3" aria-label="Requests">
		{speaking.map((item) => (
			<div class="border border-slate/20 bg-paper p-6">
				<h2 class="font-display text-xl text-slate">{item.title}</h2>
				<p class="mt-3 text-base text-slate/80">{item.description}</p>
			</div>
		))}
	</section>
</Layout>
